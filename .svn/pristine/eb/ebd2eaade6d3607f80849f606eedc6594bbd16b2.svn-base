using System;
using System.Collections.Generic;
using System.Text;
using System.Drawing;

namespace SpriteLibrary {
    public abstract class MovableSprite : Sprite {

        protected RectangleF[] _corners;

        public RectangleF[] Corners {
            get {
                RectangleF[] clickCorners = new RectangleF[_corners.Length];
                int i = 0;
                foreach (RectangleF r in _corners) {
                    clickCorners[i] = new RectangleF(r.X + PositionF.X, r.Y + PositionF.Y, r.Width, r.Height);
                    i++;
                }
                return clickCorners;
            }
            private set {
            }
        }

        protected void renderCorners(Graphics g) {
             for (int i = 0; i < _corners.Length; i++) {
                g.FillEllipse(new SolidBrush(Color.Cyan), _corners[i].X + PositionF.X, _corners[i].Y + PositionF.Y, _corners[i].Width, _corners[i].Height);
            }
        }

        public override abstract void Render(Graphics g);

        public abstract void Resize(PointF p, int ind);

    }
}
